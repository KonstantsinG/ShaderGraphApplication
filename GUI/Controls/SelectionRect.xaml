<UserControl x:Class="GUI.Controls.SelectionRect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    
    <Grid>

        <Rectangle x:Name="selectionRect" Width="20" Height="20" StrokeDashArray="10 3"
                   Fill="#4CB568DA" Stroke="#FFD771FF" StrokeThickness="1" RadiusX="5" RadiusY="5">

            <Rectangle.RenderTransform>
                <TranslateTransform x:Name="transform"/>
            </Rectangle.RenderTransform>
            
        </Rectangle>

    </Grid>
    
</UserControl>
